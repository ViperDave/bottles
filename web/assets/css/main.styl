html, body
   margin 0
   padding 0

html
   font-size 13px
   background-color #222

#wrapper
   width 1000px
   overflow hidden
   margin 0 auto

#viewer 
   position relative

   #viewer-overlay
      background-color black
      position absolute
      width 100%
      height 100%
      -webkit-transition opacity 300ms
      
      &.hide
         opacity 0

      .content-wrapper
         text-align center
         margin 0 auto
         height 100%
         overflow hidden
         padding-left 50px
         padding-right 50px

      .content
         height 100%

      #join-game
         input 
            width 80%
            font-size 25px
            height 30px

         button
            height 30px

               
#brain-editor
   .CodeMirror
      border 1px solid black
   textarea
      width 90%
      height 300px
