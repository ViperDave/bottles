#wrapper
   width 1000px
   overflow hidden

#viewer 
   float left
   position relative

   #viewer-overlay
      background-color white
      position absolute
      width 100%
      height 100%
      -webkit-transition opacity 300ms
      
      &.hide
         opacity 0

      .content-wrapper
         text-align center
         margin 0 auto
         height 100%
         overflow hidden
         padding-left 50px
         padding-right 50px

      .content
         height 100%

      #join-game
         -webkit-transition margin 400ms
         &.hide
            margin-top -100%
         
         input 
            width 80%
            font-size 25px
            height 30px

         button
            height 30px

               
#brain-editor
   float left
   width 600px
   .CodeMirror
      border 1px solid black
   textarea
      width 90%
      height 300px
